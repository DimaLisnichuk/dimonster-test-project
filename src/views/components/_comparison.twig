
                        <div class="comparison comparison--{{ type }}">
                            <div class="comparison__header">
                                <h2 class="comparison__title"><img src="assets/icons/{{ icon }}" alt="">{{ title }}</h2>
                                <button class="comparison__toggle">
                                    <img src="assets/icons/Upload-black.svg">
                                </button>
                            </div>
